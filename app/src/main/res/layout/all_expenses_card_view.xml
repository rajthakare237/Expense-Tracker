<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="15dp"
    app:strokeColor="@color/gray"
    android:backgroundTint="@color/lightGreen"
    app:strokeWidth="1dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:color/transparent">


            <TextView
                android:id="@+id/amountAllExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Rs. 220000"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateAllExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_below="@id/amountAllExp"
                android:text="Date : 07-07-2022"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="16sp" />



        <TextView
            android:id="@+id/categoryAllExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateAllExp"
            android:layout_weight="1"
            android:padding="12dp"
            android:text="Category : Food"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/descriptionAllExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryAllExp"
            android:padding="12dp"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="16sp" />



    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>